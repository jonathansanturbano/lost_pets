<%= simple_form_for pet do |f| %>
  <div class="mb-3">
    <%= f.input :name %>
  </div>
  <div class="mb-3">
    <%= f.input :species, collection: Pet::SPECIES, include_blank: false %>
  </div>
  <div class="mb-3">
    <%= f.input :address %>
  </div>
  <div class="mb-3">
    <%= f.input :found_on %>
  </div>
  <%= f.submit class: "btn btn-primary w-100" %>
<% end %>
